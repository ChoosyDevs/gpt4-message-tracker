{
    "manifest_version": 3,
    "name": "ChatCap for GPT-4",
    "version": "1.0",
    "description": "Track the remaining number of requests sent to GPT-4",
    "permissions": [
        "alarms",
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "webRequest"
    ],
    "host_permissions": ["https://*.openai.com/*"],
    "icons": {
        "16": "assets/16x16.png",
        "48": "assets/48x48.png",
        "128": "assets/128x128.png"
    },
    "action": {
        "default_icon": "assets/128x128.png"
    },
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*.openai.com/*"],
            "js": ["content.js"]
        }
    ]
}

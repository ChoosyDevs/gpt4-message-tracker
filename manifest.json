{
    "manifest_version": 2,
    "name": "GPT-4 Request Tracker",
    "version": "1.0",
    "description": "Track the number of requests sent to GPT-4",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage",
        "activeTab",
        "scripting",
        "<all_urls>"
    ],
    "icons": {
        "16": "assets/16x16.png",
        "48": "assets/48x48.png",
        "128": "assets/128x128.png"
    },
    "browser_action": {
        "default_icon": "assets/16x16.png"
    },
    "action": {
        "icons": {
            "16": "assets/16x16.png",
            "48": "assets/48x48.png",
            "128": "assets/128x128.png"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["https://*.openai.com/*"],
            "js": ["content.js"]
        }
    ]
}
